<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Petstagram_1"
        tools:targetApi="31">

        <!-- 1. Splash Activity is now the starting point -->
        <activity
            android:name=".auth.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Petstagram_1.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 2. Declare Login and Signup Activities -->
        <activity
            android:name=".auth.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.Petstagram_1.NoActionBar" />
        <activity
            android:name=".auth.SignupActivity"
            android:exported="false"
            android:theme="@style/Theme.Petstagram_1.NoActionBar" />

        <!-- 3. MainActivity no longer has the LAUNCHER tag -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="false"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.Petstagram_1.NoActionBar" />

    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
